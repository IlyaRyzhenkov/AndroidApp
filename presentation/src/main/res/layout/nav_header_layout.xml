<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#3700BCD4">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:mipmap/sym_def_app_icon"
            android:id="@+id/avatarImageView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/nav_header_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/avatarImageView" app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp" android:singleLine="false" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
